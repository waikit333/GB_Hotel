<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.goldenbeachhotelmanagementsystem">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.GoldenBeachHotelManagementSystem">
        <activity android:name=".Login"></activity>
        <activity
            android:name=".AddNewBooking"
            android:parentActivityName=".Booking" />
        <activity
            android:name=".RoomServiceItems"
            android:label="@string/title_activity_room_service_items"
            android:parentActivityName=".RoomService"
            android:theme="@style/Theme.GoldenBeachHotelManagementSystem.NoActionBar" />
        <activity
            android:name=".RoomService"
            android:parentActivityName=".Home" />
        <activity
            android:name=".CheckIns"
            android:parentActivityName=".CheckInCheckOutMenu" />
        <activity
            android:name=".Booking"
            android:parentActivityName=".Home" />
        <activity
            android:name=".RoomManagement"
            android:parentActivityName=".Home" />
        <activity
            android:name=".CheckInCheckOutMenu"
            android:parentActivityName=".Home" />
        <activity android:name=".Home" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/Theme.Design.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>