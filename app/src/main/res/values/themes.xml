<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GoldenBeachHotelManagementSystem" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/header_background_gold</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="palaBrownText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/text_color_brown</item>
        <item name="android:fontFamily">@font/pala</item>
    </style>

    <style name="errorText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:fontFamily">@font/pala</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="palaBoldBrownText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/text_color_brown</item>
        <item name="android:fontFamily">@font/pala_bold</item>
    </style>

    <style name="buttonStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="Theme.GoldenBeachHotelManagementSystem.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GoldenBeachHotelManagementSystem.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.GoldenBeachHotelManagementSystem.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>