<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookingDetails"
    android:id="@+id/bookingDetailsDrawerLayout"
    android:fitsSystemWindows="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bookingView">
        <include
            android:id="@+id/include"
            layout="@layout/toolbar_top"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="55dp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/include"
            android:layout_marginTop="50dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="?android:attr/listSeparatorTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/customer_details"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="28dp"
                    android:layout_marginTop="0dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/first_name"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="50dp" />
                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/details_txtFirstName"
                    android:background="@drawable/text_view_style"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="80dp"
                    android:textAlignment="viewStart"
                    app:errorEnabled="true"
                    android:textSize="18dp"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/last_name"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="20dp"
                    android:layout_toEndOf="@+id/details_txtFirstName"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="50dp" />

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/details_txtLastName"
                    android:background="@drawable/text_view_style"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="80dp"
                    app:errorEnabled="true"
                    android:textAlignment="viewStart"
                    android:textSize="18dp"
                    android:layout_toEndOf="@+id/details_txtFirstName"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ic"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="130dp" />

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/details_txtIC"
                    android:textAlignment="viewStart"
                    android:background="@drawable/text_view_style"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="170dp"
                    app:errorEnabled="true"
                    android:textSize="18dp"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_no"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="20dp"
                    android:layout_toEndOf="@+id/details_txtFirstName"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="130dp" />

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/details_txtPhone"
                    android:background="@drawable/text_view_style"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="170dp"
                    android:textAlignment="viewStart"
                    app:errorEnabled="true"
                    android:textSize="18dp"
                    android:layout_toEndOf="@+id/details_txtFirstName"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="20dp"
                    android:textAlignment="viewStart"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="220dp" />

                <TextView
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/details_txtEmail"
                    android:background="@drawable/text_view_style"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="260dp"
                    android:textSize="18dp"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:padding="5dp"/>

                <TextView
                    style="?android:attr/listSeparatorTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="320dp"
                    android:text="@string/booking_details"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="28dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/room"
                    android:layout_marginTop="380dp"
                    android:layout_marginStart="20dp"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="20dp"
                    android:id="@+id/lblRoomID" />

                <TextView
                    android:id="@+id/details_roomID"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="380dp"
                    android:background="@drawable/text_view_style"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="18dp"
                    android:layout_toEndOf="@+id/lblRoomID"
                    android:textAlignment="center"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/booking_date"
                    android:layout_marginTop="430dp"
                    android:layout_marginStart="20dp"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/details_bookingDate"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="460dp"
                    android:background="@drawable/text_view_style"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="18dp"
                    android:textAlignment="viewStart"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="430dp"
                    android:layout_toEndOf="@+id/details_bookingDate"
                    android:text="@string/status"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/details_txtStatus"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="460dp"
                    android:background="@drawable/text_view_style"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="18dp"
                    android:layout_toEndOf="@+id/details_bookingDate"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/type_of_room"
                    android:layout_marginTop="515dp"
                    android:layout_marginStart="15dp"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="20dp"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/details_txtTypeOfRoom"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:layout_marginTop="550dp"
                    android:background="@drawable/text_view_style"
                    android:layout_marginStart="20dp"
                    android:textSize="18dp"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="520dp"
                    android:layout_toEndOf="@+id/details_txtTypeOfRoom"
                    android:text="@string/no_of_guest"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/details_txtNumOfGuest"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="550dp"
                    android:textAlignment="center"
                    android:layout_marginStart="40dp"
                    android:textSize="18dp"
                    android:layout_toEndOf="@+id/details_txtTypeOfRoom"
                    android:background="@drawable/text_view_style"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/from"
                    android:layout_marginTop="610dp"
                    android:layout_marginStart="20dp"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="20dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/to"
                    android:layout_marginTop="610dp"
                    android:layout_marginStart="40dp"
                    android:layout_toEndOf="@+id/details_txtTypeOfRoom"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/details_txtfromDate"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="640dp"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="18dp"
                    android:background="@drawable/text_view_style"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/details_txtToDate"
                    android:layout_marginTop="640dp"
                    android:layout_marginStart="40dp"
                    android:textAlignment="viewStart"
                    android:layout_toEndOf="@+id/details_txtTypeOfRoom"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:background="@drawable/text_view_style"
                    android:textSize="18dp"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/other_guest"
                    android:layout_marginTop="700dp"
                    android:layout_marginStart="20dp"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/details_txtOthers"
                    android:layout_width="320dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="20dp"
                    android:textAlignment="viewStart"
                    android:layout_marginTop="730dp"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="18dp"
                    android:background="@drawable/text_view_style"
                    android:padding="5dp"/>

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="840dp"
                    android:text="@string/hotel_meals"
                    android:layout_marginStart="20dp"
                    android:id="@+id/details_cbxMeal"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:enabled="false"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/totalRoom"
                    android:layout_marginTop="890dp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/lbltotalRoom"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="18dp"/>

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/details_txtTotalRoom"
                    android:background="@drawable/text_view_style"
                    android:layout_marginTop="890dp"
                    android:textAlignment="viewStart"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/lbltotalRS"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="18dp"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/totalRoomService"
                    android:layout_marginTop="920dp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/lbltotalRS"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="18dp"/>

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/details_txtTotalRs"
                    android:background="@drawable/text_view_style"
                    android:layout_marginTop="920dp"
                    android:textAlignment="viewStart"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/lbltotalRS"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="18dp"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="950dp"
                    android:text="@string/total"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/details_txtTotal"
                    android:background="@drawable/text_view_style"
                    android:layout_marginTop="950dp"
                    android:textAlignment="viewStart"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/lbltotalRS"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="18dp"
                    android:padding="5dp"/>

                <Button
                    android:id="@+id/btnCancelBooking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="980dp"
                    android:layout_toEndOf="@+id/details_cbxMeal"
                    android:backgroundTint="@color/button_color_green"
                    android:text="@string/cancel_booking"
                    android:onClick="btnCancelOnClick"
                    android:textColor="@color/white" />

            </RelativeLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>