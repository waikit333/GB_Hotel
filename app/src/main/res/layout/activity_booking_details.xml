<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookingDetails"
    android:id="@+id/bookingDetailsDrawerLayout"
    android:fitsSystemWindows="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bookingView">
        <include
            android:id="@+id/include"
            layout="@layout/toolbar_top"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="55dp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/include"
            android:layout_marginTop="50dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="?android:attr/listSeparatorTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/customer_details"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="28dp"
                    android:layout_marginTop="0dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/first_name"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="50dp"/>
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:id="@+id/details_txtFirstName"
                    android:background="@drawable/text_view_style"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="80dp"
                    android:textAlignment="center"
                    app:errorEnabled="true"
                    android:textSize="20dp"
                    android:textAppearance="@style/palaBoldBrownText"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/last_name"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="20dp"
                    android:layout_toEndOf="@+id/details_txtFirstName"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="50dp"/>

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:id="@+id/details_txtLastName"
                    android:background="@drawable/text_view_style"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="80dp"
                    app:errorEnabled="true"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:layout_toEndOf="@+id/details_txtFirstName"
                    android:textAppearance="@style/palaBoldBrownText"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ic"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="130dp"/>
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:id="@+id/details_txtIC"
                    android:textAlignment="center"
                    android:background="@drawable/text_view_style"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="170dp"
                    app:errorEnabled="true"
                    android:textSize="20dp"
                    android:textAppearance="@style/palaBoldBrownText"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_no"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="20dp"
                    android:layout_toEndOf="@+id/details_txtFirstName"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="130dp"/>

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:id="@+id/details_txtPhone"
                    android:background="@drawable/text_view_style"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="170dp"
                    android:textAlignment="center"
                    app:errorEnabled="true"
                    android:textSize="20dp"
                    android:layout_toEndOf="@+id/details_txtFirstName"
                    android:textAppearance="@style/palaBoldBrownText"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="220dp"/>
                <TextView
                    android:layout_width="360dp"
                    android:layout_height="40dp"
                    android:id="@+id/details_txtEmail"
                    android:background="@drawable/text_view_style"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="260dp"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textAppearance="@style/palaBoldBrownText"/>

                <TextView
                    style="?android:attr/listSeparatorTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="320dp"
                    android:text="@string/booking_details"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="28dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/booked_date"
                    android:layout_marginTop="370dp"
                    android:layout_marginStart="10dp"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="20dp"
                    />

                <TextView
                    android:id="@+id/details_bookingDate"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="410dp"
                    android:background="@drawable/text_view_style"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="20dp"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status"
                    android:layout_marginTop="370dp"
                    android:layout_marginStart="40dp"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="20dp"
                    android:layout_toEndOf="@+id/details_bookingDate"/>


                <TextView
                    android:id="@+id/details_txtStatus"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:textAlignment="center"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="410dp"
                    android:background="@drawable/text_view_style"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="20dp"
                    android:layout_toEndOf="@+id/details_bookingDate"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/type_of_room"
                    android:layout_marginTop="460dp"
                    android:layout_marginStart="10dp"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/details_txtTypeOfRoom"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:textAlignment="center"
                    android:layout_marginTop="500dp"
                    android:background="@drawable/text_view_style"
                    android:layout_marginStart="10dp"
                    android:textAppearance="@style/palaBoldBrownText"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_of_guest"
                    android:layout_marginTop="460dp"
                    android:layout_marginStart="40dp"
                    android:layout_toEndOf="@+id/details_txtTypeOfRoom"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/details_txtNumOfGuest"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="500dp"
                    android:textAlignment="center"
                    android:layout_marginStart="40dp"
                    android:layout_toEndOf="@+id/details_txtTypeOfRoom"
                    android:background="@drawable/text_view_style"
                    android:textAppearance="@style/palaBoldBrownText"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/from"
                    android:layout_marginTop="560dp"
                    android:layout_marginStart="10dp"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="20dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/to"
                    android:layout_marginTop="560dp"
                    android:layout_marginStart="40dp"
                    android:layout_toEndOf="@+id/details_txtIC"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/details_txtfromDate"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:textAlignment="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="600dp"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="20dp"
                    android:background="@drawable/text_view_style"
                    />

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:id="@+id/details_txtToDate"
                    android:layout_marginTop="600dp"
                    android:layout_marginStart="40dp"
                    android:textAlignment="center"
                    android:layout_toEndOf="@+id/details_txtIC"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:background="@drawable/text_view_style"
                    android:textSize="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/other_guest"
                    android:layout_marginTop="660dp"
                    android:layout_marginStart="10dp"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/details_txtOthers"
                    android:layout_width="360dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="10dp"
                    android:textAlignment="center"
                    android:layout_marginTop="700dp"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="20dp"
                    android:background="@drawable/text_view_style"
                    />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="810dp"
                    android:text="@string/hotel_meals"
                    android:layout_marginStart="10dp"
                    android:id="@+id/details_cbxMeal"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:enabled="false"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total"
                    android:layout_marginTop="810dp"
                    android:layout_marginStart="90dp"
                    android:layout_toEndOf="@+id/details_cbxMeal"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:id="@+id/details_txtTotal"
                    android:background="@drawable/text_view_style"
                    android:layout_marginTop="850dp"
                    android:textAlignment="center"
                    android:layout_marginStart="90dp"
                    android:layout_toEndOf="@+id/details_cbxMeal"
                    android:textAppearance="@style/palaBoldBrownText"
                    android:textSize="20dp"/>

                <Button
                    android:id="@+id/btnCancelBooking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="900dp"
                    android:layout_toEndOf="@+id/details_cbxMeal"
                    android:backgroundTint="@color/button_color_green"
                    android:text="@string/cancel_booking"
                    android:onClick="btnCancelOnClick"
                    android:textColor="@color/white" />

            </RelativeLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>