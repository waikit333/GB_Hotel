<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/downToolbar"
        layout="@layout/down_toolbar"/>

    <Button
        android:id="@+id/view_check_ins_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="50dp"
        android:paddingVertical="40dp"
        android:text="@string/view_check_ins"
        android:textColor="@color/text_color_brown"
        android:textSize="18sp"
        app:backgroundTint="@color/item_background_yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/view_check_outs_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="50dp"
        android:paddingVertical="40dp"
        android:text="@string/view_check_outs"
        android:textColor="@color/text_color_brown"
        android:textSize="18sp"
        app:backgroundTint="@color/item_background_yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_check_ins_button" />

</androidx.constraintlayout.widget.ConstraintLayout>